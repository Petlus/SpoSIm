{
  "name": "betbrain",
  "version": "1.0.1",
  "private": true,
  "main": "electron/index.js",
  "author": "BetBrain",
  "repository": {
    "type": "git",
    "url": "https://github.com/Petlus/SpoSIm.git"
  },
  "scripts": {
    "dev": "concurrently -k \"next dev\" \"wait-on tcp:3000 && electron .\"",
    "build": "next build",
    "build:electron": "next build && prisma generate && electron-builder",
    "build:electron:win": "next build && prisma generate && electron-builder --win",
    "start": "next start",
    "lint": "eslint",
    "update-data": "node electron/data_fetcher.js",
    "update-data:force": "node electron/data_fetcher.js --force",
    "update-leagues-data": "node electron/scripts/update-leagues-data.js",
    "reset-db": "node electron/reset_db.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.13.4",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prisma": "^5.22.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.betbrain.app",
    "productName": "BetBrain",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "generated/**/*",
      "prisma/**/*",
      "config/**/*",
      "data/sports.db",
      "package.json"
    ],
    "asar": false,
    "extraResources": [
      {
        "from": "prisma",
        "to": "prisma",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "Petlus",
      "repo": "SpoSIm",
      "vPrefixedTagName": true,
      "releaseType": "release"
    }
  }
}
